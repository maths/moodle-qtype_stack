    <questionvariables>
      <text>n1:rand(9)+2;
 n3:rand(4)+2;
 arg1:rand([Pi/6,Pi/4,Pi/3]);
 z1:expand(n3*(cos(arg1)+i*sin(arg1)));
 z2:expand(n3*(cos(arg1)-i*sin(arg1)));
 cubequ:expand((x-n1)*(x-z1)*(x-z2));
 simpcubic:collectterms(cubequ,x);
 constcoeff:coeff(simpcubic,x,0);
 simpquadratic:divide(simpcubic,(x-n1),x);
 acoeff:coeff(simpquadratic[1],x,2);
 bcoeff:coeff(simpquadratic[1],x,1);
 ccoeff:coeff(simpquadratic[1],x,0);
 
 wrongz1:n3*(cos(arg1)-i*sin(arg1));</text>
