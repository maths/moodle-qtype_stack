    <questionvariables>
      <text>/* compute random L and U and M=L.U */

m:5;

L0: matrix([1, 0, 0],
          [rand_with_prohib(-m,m,[0]), 1, 0],
          [rand_with_prohib(-m,m,[0]), rand_with_prohib(-m,m,[0]), 1]);
U0: matrix([rand_with_prohib(-m,m,[0]), rand_with_prohib(-m,m,[0]), rand_with_prohib(-m,m,[0])],
          [0, rand_with_prohib(-m,m,[0]), rand_with_prohib(-m,m,[0])],
          [0, 0, rand_with_prohib(-m,m,[0])] );

M0: L0.U0;

/* apply a row operation with unknown factor and determine k such that the second subdeterminant is zero*/
M: rowop(M0,2,3,k);
[M,k]: ev([M,k], solve(determinant(submatrix(3,M,3)),k));
/* multiply row 2 by a factor such that no fractions remain */
d: lcm(denom(M[2,1]),denom(M[2,2]),denom(M[2,3]));
M: ratsimp(matrix([1,0,0],[0,d,0],[0,0,1]).M); 
/* LU decomposition of M */
MS: rowswap(M,2,3)
LU: lu_factor(MS)[1];
L: LU*matrix([1,0,0], [1,1,0],[1,1,1]);
L[1,1]:1; L[2,2]:1; L[3,3]:1;
U: LU*matrix([1,1,1], [0,1,1],[0,0,1]);
M1:L.U;

x: matrix([rand_with_prohib(-m,m,[0])], [rand_with_prohib(-m,m,[0])], [rand_with_prohib(-m,m,[0])]);
y: U.x;
rhs: M.x;
rhs0:rowswap(rhs,2,3);

rhsc: M.x;</text>
