    <questionvariables>
      <text><![CDATA[X:[2,4,5,7];
Y:[1.34+rand(100)/100,1.84+rand(100)/100,1.12+rand(100)/100, 0.02+rand(100)/100];
/*Y:[2.2+rand(10)/10,5.4+rand(10)/10,6.5+rand(10)/10, 13.2+rand(10)/10];*/
T:apply(table,args(append(matrix([x_i,f_i]),transpose(matrix(X,Y)))));
/* compute spline directly from conditions */
s1(x):= a1*(x-X[1])^3+b1*(x-X[1])^2+c1*(x-X[1])+d1;
s2(x):= a2*(x-X[2])^3+b2*(x-X[2])^2+c2*(x-X[2])+d2;
s3(x):= a3*(x-X[3])^3+b3*(x-X[3])^2+c3*(x-X[3])+d3;
eq: [
    s1(X[1])=Y[1],
    s1(X[2])=Y[2],
    s2(X[2])=Y[2],
    s2(X[3])=Y[3],
    s3(X[3])=Y[3],
    s3(X[4])=Y[4],
    at(diff(s1(x),x),x=X[2])=at(diff(s2(x),x),x=X[2]),
    at(diff(s2(x),x),x=X[3])=at(diff(s3(x),x),x=X[3]),
    at(diff(s1(x),x,2),x=X[2])=at(diff(s2(x),x,2),x=X[2]),
    at(diff(s2(x),x,2),x=X[3])=at(diff(s3(x),x,2),x=X[3]),
    at(diff(s1(x),x,2),x=X[1])=0,
    at(diff(s3(x),x,2),x=X[4])=0
];
[d1,a1,b1,c1,d2,a2,b2,c2,d3,a3,b3,c3]: 
  ev([d1,a1,b1,c1,d2,a2,b2,c2,d3,a3,b3,c3],solve(eq,listofvars(eq))),float;

fb_poly(p,x,o,n):=block(
  if not polynomialp(p,[x]) then return([sconcat("<br>\\(", n, "\\) is not a polynomial in \\(x\\)."), false]),
    ord: hipow(ratexpand(p),x),
  if  ord > o then return([sconcat("<br>\\(", n, "\\) is of order \\(", string(ord), "\\). Maximum order should be \\(",string(o),"\\)."), false]),
  ["",true]  
);]]></text>
