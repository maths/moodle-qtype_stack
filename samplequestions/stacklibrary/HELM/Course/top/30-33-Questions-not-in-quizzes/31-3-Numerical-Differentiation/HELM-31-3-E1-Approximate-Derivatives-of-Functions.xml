      <text><![CDATA[simp:false;
[fn, a]: rand([
 [sqrt(x),2],[sinh(x),1],[cosh(x),pi/2],[sin(x),pi/3],[cos(x),pi/4]
] )
simp:true;
h: rand([0.01, 0.001]);
dx: decimalplaces(at(diff(fn,x),x=a),8);
df: decimalplaces((ev(fn,x=a+h)-ev(fn,x=a))/h,8);
db: decimalplaces((ev(fn,x=a)-ev(fn,x=a-h))/h,8);
dc: decimalplaces((ev(fn,x=a+h)-ev(fn,x=a-h))/(2*h),8);
dfp: significantfigures(abs(df-dx)/dx*100,2);
dbp: significantfigures(abs(db-dx)/dx*100,2);
dcp: significantfigures(abs(dc-dx)/dx*100,2);

stack_include("https://raw.githubusercontent.com/mkraska/meclib/main/Maxima/fb_value_EN.mac");]]></text>
