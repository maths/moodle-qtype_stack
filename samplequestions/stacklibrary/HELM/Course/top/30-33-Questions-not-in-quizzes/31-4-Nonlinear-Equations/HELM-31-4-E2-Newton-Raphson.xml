 [I_s=3*10^(-14), R=1000, V_in= 3, V_th=0.025, x0=0.65]
];

v: rand(vv)


x0: ev(x0,v);
x1: x0-ev(f(x0)/df(x0), v);
x2: x1-ev(f(x1)/df(x1), v);


stack_include("https://raw.githubusercontent.com/mkraska/meclib/main/Maxima/fb_value_EN.mac");]]></text>
