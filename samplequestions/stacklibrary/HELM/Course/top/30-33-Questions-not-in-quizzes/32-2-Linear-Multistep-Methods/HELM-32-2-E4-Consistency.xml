    <questionvariables>
      <text><![CDATA[k: 2;
alpha: [-3,2,1];
beta: [17, 16, 7]/10;
lside: sum(alpha[j+1]*'y['n+j], j, 0, k);
rside: sum(beta[j+1]*'f['n+j], j, 0, k);
rho: sum(alpha[j+1]*z^j, j, 0, k);
sol: solve(rho, z);
z1: ev(z, sol[1]);
z2: ev(z, sol[2]);
ZS_mcq: [
  [1, false, "zero stable"],
  [2, true, "not zero stable" ]
];
c0: sum(alpha[j+1],j,0,k);
c1: sum(j*alpha[j+1]-beta[j+1],j,0,k);
c(p):=sum( (j^p)/p!*alpha[j+1]-(j^(p-1))/(p-1)!*beta[j+1],j,0,k);
cp: matrix([c0, c1, c(2), c(3)]);
o: 2;

