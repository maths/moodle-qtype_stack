    <questionvariables>
      <text><![CDATA[L: 1.2;        /* Length of the bar */
alpha: 2.25;    /* Diffusivity */
dx: 0.4;      /* Spatial step size */
dt: 0.06;      /* Time step size */
nx: round(L/dx + 1);  /* Number of spatial points */
nt: 2;         /* Number of time steps (t=delta t and t=2*delta t) */
r: alpha * dt / (dx^2); /* Crank-Nicolson parameter */

/* Initialize the grid */
u: makelist(makelist(0.0, i, 1, nx), j, 1, nt+1);

/* Spatial grid */
x: makelist((i-1)*dx, i, 1, nx);

/* Initial condition */
for i:2 thru nx-1 do
    u[1][i] : float(sin(%pi*x[i]/L));

/* Boundary conditions */
for j:1 thru nt+1 do (
    u[j][1] : 0.0,
    u[j][nx] : 0.0
);

/* Crank-Nicolson scheme matrices */

/* Matrix A for u[n+1] */
A: zeromatrix(nx-2, nx-2);
for i:1 thru nx-2 do (
    A[i,i] : 1 + r,
    if i < nx-2 then A[i,i+1] : -r/2,
    if i > 1 then A[i,i-1] : -r/2
);

/* Matrix B for u[n] */
B: zeromatrix(nx-2, nx-2);
for i:1 thru nx-2 do (
    B[i,i] : 1 - r,
    if i < nx-2 then B[i,i+1] : r/2,
    if i > 1 then B[i,i-1] : r/2
);
/* Time-stepping */
for n:1 thru nt do (
    b: B . matrix([u[n][2]], [u[n][3]]),  /* not scalable */
    b[1,1]: b[1,1]+r/2*(u[n][1]+u[n+1][1]),
    b[nx-2,1]: b[nx-2,1]+r/2*(u[n][nx]+u[n+1][nx]),
    u_new: invert(A) . b,
    for i:2 thru nx-1 do
        u[n+1][i] : u_new[i-1][1]
);


u1: matrix(u[2]);
u2: matrix(u[3]);
stack_include("https://raw.githubusercontent.com/mkraska/meclib/main/Maxima/fb_value_EN.mac");

toList(m):= args(transpose(m))[1];]]></text>
