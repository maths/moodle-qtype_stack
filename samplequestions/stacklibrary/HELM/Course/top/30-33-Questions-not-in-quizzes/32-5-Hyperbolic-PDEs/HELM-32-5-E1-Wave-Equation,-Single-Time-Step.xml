c: 1.4+rand([-0.1,0,0.1]);
dt: 0.1;
mu: c * dt / dx;

/* Given values after 6th and 7th time steps */
u6: [0.0000, 0.1024+rand_with_step(-0.02, 0.02,0.0001), 
             0.1986+rand_with_step(-0.02, 0.02,0.0001),
             0.2361+rand_with_step(-0.02, 0.02,0.0001), 0.0000];
u7: [0.0000, 0.0997+rand_with_step(-0.02, 0.02,0.0001), 
             0.1730+rand_with_step(-0.02, 0.02,0.0001), 
             0.1169+rand_with_step(-0.02, 0.02,0.0001), 0.0000];


/* Initialize the next time step (8th time step) */
u8: makelist(0.0, i, 1, 5);

/* Apply the numerical method for j = 2, 3, 4 (internal points) */
for j:2 thru 4 do (
    u8[j] : 2*u7[j] - u6[j] + mu^2 * (u7[j+1] - 2*u7[j] + u7[j-1])
);

u8: matrix(u8);

stack_include("https://raw.githubusercontent.com/mkraska/meclib/main/Maxima/fb_value_EN.mac");]]></text>
