             -0.1209+rand_with_step(-0.02, 0.02,0.0001), 0.0000];
/* Initialize u arrays for the first two time steps */
u0: f;
u1: makelist(0.0, i, 1, 5); /* This corresponds to t = delta t */

/* Boundary conditions: u0[1] = u0[5] = 0, and u1[1] = u1[5] = 0 */
u1[2] : u0[2] + 0.5*mu^2*(u0[3] - 2*u0[2] + u0[1]);
u1[3] : u0[3] + 0.5*mu^2*(u0[4] - 2*u0[3] + u0[2]);
u1[4] : u0[4] + 0.5*mu^2*(u0[5] - 2*u0[4] + u0[3]);

/* Now compute u2 corresponding to t = 2*delta t */
u2: makelist(0.0, i, 1, 5); /* This corresponds to t = 2*delta t */

/* Apply the numerical method */
u2[2] : 2*u1[2] - u0[2] + mu^2*(u1[3] - 2*u1[2] + u1[1]);
u2[3] : 2*u1[3] - u0[3] + mu^2*(u1[4] - 2*u1[3] + u1[2]);
u2[4] : 2*u1[4] - u0[4] + mu^2*(u1[5] - 2*u1[4] + u1[3]);

u1: matrix(u1); u2: matrix(u2);

stack_include("https://raw.githubusercontent.com/mkraska/meclib/main/Maxima/fb_value_EN.mac");

toList(m):= args(m)[1];]]></text>
