  <tr>
   <td>\( u_j^1=\) </td>
   <td>[[input:S_u1]]</td>
  </tr>
  <tr>
   <td></td>
   <td>[[validation:S_u1]]</td>
  </tr>
 </tbody>
</table>
<p>[[feedback:u1]]</p>

