    <questionvariables>
      <text><![CDATA[/* Define parameters */
L: 0.75;
h: 0.25;
y0: rand_with_step(-2,2,1);
y3: rand_with_step(-2,2,1);

/* Define the coefficients of the ODE */
p: rand_with_step(1,3,1);
q: rand_with_step(-3,-1,1);
r: rand_with_step(2,4,1);
s: rand_with_step(5,7,1);

/* Define the equations using central difference approximations */
eq1: (p*(y2 - 2*y1 + y0)/h^2) + (q*(y2 - y0)/(2*h)) + r*y1 = s;
eq2: (p*(y3 - 2*y2 + y1)/h^2) + (q*(y3 - y1)/(2*h)) + r*y2 = s;

/* Solve the system of equations */
[y1,y2]: float(ev([y1,y2],linsolve([eq1, eq2], [y1, y2])));

stack_include("https://raw.githubusercontent.com/mkraska/meclib/main/Maxima/fb_value_EN.mac");

toList(m):= args(transpose(m))[1];]]></text>
