    <questionvariables>
      <text><![CDATA[/* Define parameters */
L: 1.2;
h: 0.3;
y0: -2;
yL: 3;
y0: rand_with_step(-3,-1,1);
yL: rand_with_step(2,4,1);

/* Define the coefficients of the ODE */
p(x):= 2;
q(x):= 3;
r(x):= 0;
s(x):= 5;
p0: rand_with_step(1,3,1);
q0: rand_with_step(2,4,1);
s0: rand_with_step(4,6,1);
p(x):= p0;
q(x):= q0;
r(x):= 0;
s(x):= s0;

/* Define the equations using central difference approximations */
c1: p(x)-h*q(x)/2;
c2: h^2*r(x)-2*p(x);
c3: p(x)+h*q(x)/2;
c4: h^2*s(x);
A: matrix( [c2, c3, 0], [c1, c2, c3], [0, c1, c2] );
b: matrix( [c4-c1*y0], [c4], [c4-c3*yL] );

y: invert(A).b;

stack_include("https://raw.githubusercontent.com/mkraska/meclib/main/Maxima/fb_value_EN.mac");

toList(m):= args(transpose(m))[1];]]></text>
