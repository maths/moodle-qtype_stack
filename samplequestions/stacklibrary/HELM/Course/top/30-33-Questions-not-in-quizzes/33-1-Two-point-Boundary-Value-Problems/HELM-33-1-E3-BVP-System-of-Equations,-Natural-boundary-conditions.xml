    <questionvariables>
      <text><![CDATA[/* Define parameters */
h: 0.5;
nx: 3;
L: nx*h;
dy0: 2;
yL: 1;
dy0: rand_with_step(-2,2,1);
yL: rand_with_step(-2,2,1);
p0: rand_with_step(1,3,1);
r0: rand_with_step(1,3,1);
p(x):=p0;
q(x):= x^2;
r(x):= r0;
s(x):= x;

/* boudary conditions */
yg:  y1-2*h*dy0;
y3: yL;

/* Define the coefficients of the ODE at the various points */
X: makelist(j*h,j,-1,nx);
Y: ratsimp([yg, y0, y1, y2, yL]);
P: makelist(p(X[j]),j,1,nx+2);
Q: makelist(q(X[j]),j,1,nx+2);
R: makelist(r(X[j]),j,1,nx+2);
S: makelist(s(X[j]),j,1,nx+2);

/* Define the equations using central difference approximations */
eq: expand(makelist(Y[j-1]*(P[j]-h/2*Q[j])+Y[j]*(h^2*R[j]-2*P[j])+Y[j+1]*(P[j]+h/2*Q[j])-
    h^2*S[j],
    j,2,nx+1));
A11: diff(eq[1], y1);

A:jacobian(eq,[y0,y1,y2]);
b:radcan(-transpose(matrix(eq))+A.transpose(matrix([y0,y1,y2])));


sol: invert(A).b;

stack_include("https://raw.githubusercontent.com/mkraska/meclib/main/Maxima/fb_value_EN.mac");

toList(m):= args(transpose(m))[1];]]></text>
