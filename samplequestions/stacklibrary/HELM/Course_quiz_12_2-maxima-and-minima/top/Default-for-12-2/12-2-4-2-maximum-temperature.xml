    <questionvariables>
      <text><![CDATA[declare(a, constant);
declare(omega, constant);
assume(a>0, omega>0);
triginverses: all;

T: 5*exp(-a*t)*sin(omega*t);
dT: diff(T,t);
spts: solve(dT)[1];
spexp1: trigreduce(trigsimp(spts/cos(omega*t)));
spexp2: atan(spexp1);
spexp3: rhs(spexp2)+k*pi;

ta1: dT;
ta2: rhs(spexp2);
ta3: [[0,false],[k*pi/2,false],[k*pi,true],[2*k*pi,false]];
ta4: [[1,false,"is positive"],[2,true,"is negative"],[3,false, "is zero"]];
ta5: [[0,false,"for all k"],[1,false,"only for k=0"],[2,false,"for odd k"],[3,true,"for even k"]];
ta6: k;]]></text>
