    </incorrectfeedback>
    <shownumcorrect/>
    <answer fraction="100" format="html">
      <text><![CDATA[<p dir="ltr" style="text-align: left;">\(-1+(x-2)-(x-2)^2+(x-2)^3+\cdots + (-1)^{n+1}(x-2)^n+\cdots\)<br></p>]]></text>
      <feedback format="html">
        <text/>
      </feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p dir="ltr" style="text-align: left;">\(1+(x-2)+(x-2)^2+(x-2)^3+\cdots + (x-2)^n+\cdots\)<br></p>]]></text>
      <feedback format="html">
        <text/>
      </feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<p dir="ltr" style="text-align: left;">\(1-(x-2)+(x-2)^2-(x-2)^3+\cdots + (-1)^{n}(x-2)^n+\cdots\)<br></p>]]></text>
      <feedback format="html">
        <text/>
      </feedback>
