    <questionvariables>
      <text><![CDATA[ordergreat(x,y);
/*parabola*/
par:rand_selection(delete(0,makelist(i,i,-5,5)),5);
p2:sqrt(4*par[1]*par[1]);
polypar:par[1]*x^2+p2*x*y+par[1]*y^2+par[3]*x+par[4]*y+par[5];
MP:matrix([par[1],p2/2,par[3]/2],[p2/2,par[1],par[4]/2],[par[3]/2,par[4]/2,par[5]]);
/*while determinant(MP) =0 do (par[5]:par[5]+1);*/


/*hyperbola*/
hyp:rand_selection(delete(0,makelist(i,i,-5,5)),5);
h2:(-1)^(hyp[1])*(ceiling(sqrt(abs(4*hyp[1]*hyp[2])+2)));
polyhyp:hyp[1]*x^2+h2*x*y+hyp[2]*y^2+hyp[3]*x+hyp[4]*y+hyp[5];
MH:matrix([hyp[1],h2/2,hyp[3]/2],[h2/2,hyp[2],hyp[4]/2],[hyp[3]/2,hyp[4]/2,hyp[5]]);
while determinant(MH) =0 do (hyp[5]:hyp[5]+1);

/*ellipse */
ell:rand_selection(delete(0,makelist(i,i,-5,5)),3);
e1:1+rand(3);
e2:(-1)^(e1)*1;
polyell:e1*x^2+e2*x*y+e1*y^2+ell[1]*x+ell[2]*y+ell[3];
ME:matrix([e1,e2/2,ell[1]/2],[e2/2,e1,ell[2]/2],[ell[1]/2,ell[2]/2,ell[3]]);
while determinant(ME) =0 do (ell[5]:ell[5]+1);
/*circle*/
cir:rand_selection(delete(0,makelist(i,i,-5,5)),3);
c1:1+rand(3);
c2:0;
polycirc:c1*x^2+c2*x*y+c1*y^2+cir[1]*x+cir[2]*y+cir[3];
MC:matrix([c1,c2/2,cir[1]/2],[c2/2,c1,cir[2]/2],[cir[1]/2,cir[2]/2,cir[3]]);
while determinant(MC) =0 do (cir[5]:cir[5]+1);

perm:rand_selection([1,2,3,4],4);
conics:[polypar, polyhyp, polyell, polycirc];
poly:[1,2,3,4];
ta:[1,2,3,4];
mc:[[["Parabola",true],["Hyperbola",false],["Ellipse",false],["Circle",false]],[["Parabola",false],["Hyperbola",true],["Ellipse",false],["Circle",false]],[["Parabola",false],["Hyperbola",false],["Ellipse",true],["Circle",false]],[["Parabola",false],["Hyperbola",false],["Ellipse",false],["Circle",true]]];
for i:1 thru 4 do (poly[i]:conics[perm[i]]);
for i:1 thru 4 do(ta[i]:mc[perm[i]]);]]></text>
