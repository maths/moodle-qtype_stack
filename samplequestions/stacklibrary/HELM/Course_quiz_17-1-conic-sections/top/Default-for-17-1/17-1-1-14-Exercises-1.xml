    <questionvariables>
      <text><![CDATA[ordergreat(x,y);
a:2;
b:3;
if a=b then b:b+1;
/*c:[rand_with_step(-5,5,1),rand_with_step(-5,5,1)]*/
c:[2,-3];
f:(x-c[1])^2/a^2+(y-c[2])^2/b^2-1;
g:expand(a^2*b^2*f);
standard:(x-c[1])^2/a^2+(y-c[2])^2/b^2 = (1+b^2*(c[1])^2+a^2*(c[2])^2)/(a^2*b^2)


ta_centre:c;
if a>b then ta_maj:[["x axis",true],["y axis",false]] else ta_maj:[["x axis",false],["y axis",true]];
if a>b then ta_min:[["x axis",false],["y axis",true]] else ta_min:[["x axis",true],["y axis",false]];

if b<a then ec:sqrt(1-b^2/a^2) else ec:sqrt(1-a^2/b^2);
if b<a then ta_foci:{[c[1]+a*ec,c[2]],[c[1]-a*ec,c[2]]} else ta_foci:{[c[1],c[2]+b*ec],[c[1],c[2]-b*ec]};
foci:listify(ta_foci);]]></text>
