    <questiontext format="html">
      <text><![CDATA[Write down the equations of the three circles (A, B, C) below: 
[[jsxgraph]]
  // boundingbox:[left, top, right, bottom]
  var board = JXG.JSXGraph.initBoard(divid, {boundingbox: [-7, 7, 7, -7], axis: true, showCopyright: false});
  var graph = board.create('curve',
                       [function(t){ return {#c1[1]#}+{#r1#}*Math.cos(t);},
                        function(t){ return {#c1[2]#}+{#r1#}*Math.sin(t);},
                        0, 2*Math.PI]
                    );
  var graph2 = board.create('curve',
                       [function(t){ return {#c2[1]#}+{#r2#}*Math.cos(t);},
                        function(t){ return {#c2[2]#}+{#r2#}*Math.sin(t);},
                        0, 2*Math.PI]
                    );
  var graph3 = board.create('curve',
                       [function(t){ return {#c3[1]#}+{#r3#}*Math.cos(t);},
                        function(t){ return {#c3[2]#}+{#r3#}*Math.sin(t);},
                        0, 2*Math.PI]
                    );
  var p = board.create('point',[{#c1[1]#}, {#c1[2]#} ], {name:'A', size: 3}
										);
  var p2 = board.create('point',[{#c2[1]#}, {#c2[2]#} ], {name:'B', size: 3}
										);
  var p3 = board.create('point',[{#c3[1]#}, {#c3[2]#} ], {name:'C', size: 3}
										);
[[/jsxgraph]]
