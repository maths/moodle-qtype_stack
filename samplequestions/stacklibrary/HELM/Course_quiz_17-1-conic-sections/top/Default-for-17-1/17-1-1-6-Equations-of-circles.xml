      <text>ordergreat(x,y);
/*Centres and radii of two circles */
a1:rand_with_step(-5,5,1)
b1:rand_with_step(-5,5,1)
a2:rand_with_step(-5,5,1)
b2:rand_with_step(-5,5,1)
c1:[a1,b1];
r1:1+rand(5);
c2:[a2,b2];
r2:1/sqrt(rand([2,3,5,7]));

/*Reverse engineering the equations*/
poly1:expand((x-c1[1])^2+(y-c1[2])^2-r1^2)
poly2:expand(((x-c2[1])^2+(y-c2[2])^2-r2^2)/r2^2)

/*useful things for the general feedback*/
poly2a:expand((x-c2[1])^2+(y-c2[2])^2-r2^2)
const1:at(poly1,[x=0,y=0])
const2:at(poly2a,[x=0,y=0])</text>
