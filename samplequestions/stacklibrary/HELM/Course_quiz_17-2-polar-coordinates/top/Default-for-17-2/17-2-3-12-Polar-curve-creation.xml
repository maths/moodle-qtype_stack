		JXG.Options.text.useMathHax = true;
		
		var second= board.create('slider',[[0.2, -0.6], [0.8, -0.6], [0, {#init_c#}, 4]], {name:'e^{-aÎ¸}, a=', snapwidth: 0.25});
	
		var curve = board.create('curve', [ function (theta) { return Math.exp(-second.Value() * theta); },

