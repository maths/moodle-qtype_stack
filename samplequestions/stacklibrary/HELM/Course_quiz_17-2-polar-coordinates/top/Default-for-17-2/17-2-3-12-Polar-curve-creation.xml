    {curveType: 'polar',
    strokewidth: 2,
    strokeColor: 'blue'});

second.on('drag', function () { curve.updateCurve(); board.update(); });

stack_jxg.bind_list_of(ans2Ref, [second]);

[[/jsxgraph]]

<p>[[feedback:prt2]]</p>


