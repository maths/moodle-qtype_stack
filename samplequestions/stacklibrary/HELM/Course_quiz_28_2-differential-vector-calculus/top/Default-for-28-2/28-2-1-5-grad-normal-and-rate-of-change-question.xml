      <text>sub_point_fun(kk):=subst(1, z, subst(1, y, subst(1, x, kk))); /*Function that substitutes (x, y, z) = (1, 1, 1) into a give expression*/

aa:1+rand(3);
bb:1+rand(3);
cc:1+rand(3);
express:x^aa*y^bb*z^cc;

ta1i:diff(express, x);
ta1j:diff(express, y);
ta1k:diff(express, z);

exp_at_point_magnitude:sqrt(sub_point_fun(ta1i)^2 + sub_point_fun(ta1j)^2 + sub_point_fun(ta1k)^2);

simp:false;
feedvar1:sub_point_fun(ta1i);
