      <text><![CDATA[stack_reset_vars(true);
stackvectortex(ex):= block(sconcat("{\\underline{", tex1(first(args(ex))), "}}"));

ordergreat(i,j,k);
ijk_vec: matrix([i],[j],[k]);

aa: rand_with_step(-4,4,1);
bb: rand_with_step(-4,4,1);
cc: rand_with_prohib(-4,4,[aa]);

vec_field_mat: matrix([2*aa], [2*bb], [2*cc]);
val_vec_field: texboldatoms(dotproduct(ijk_vec,vec_field_mat));

size: aa^2 + bb^2 + cc^2;
tai: aa/sqrt(size);
taj: bb/sqrt(size);
tak: cc/sqrt(size);

uni_mat: matrix([tai],[taj],[tak]);
unit_vec: texboldatoms(dotproduct(ijk_vec,uni_mat));]]></text>
