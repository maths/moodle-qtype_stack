Sumxy:L1*E1 + L2*E2 + L3*E3 + L4*E4 + L5*E5;
Sumx2:L1^2+L2^2+L3^2+L4^2+L5^2;
Sumy2:E1^2+E2^2+E3^2+E4^2+E5^2;

r:decimalplaces(( n*Sumxy - Sumx*Sumy)/( sqrt( (n*Sumx2 - (Sumx) ^2)*(n*Sumy2 - ( Sumy)^2 ))),6);
rtest:decimalplaces((r*sqrt(n-2))/(sqrt(1-r^2)),6);
ta1:decimalplaces(r,3);
ta2:decimalplaces(rtest,3);
Ta2:decimalplaces( ta1*sqrt(n-2)/sqrt(1-ta1^2),3);
ta3:[[2.353,false],[2.776, false],[3.182,true]];
ta4:[["can",true],["cannot", false]];]]></text>
