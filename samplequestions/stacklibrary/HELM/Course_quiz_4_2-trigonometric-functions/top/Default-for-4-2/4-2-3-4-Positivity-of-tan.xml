<?xml version="1.0" encoding="UTF-8"?>
<quiz>
  <question type="multichoice">
    <name>
      <text>4.2.3.4 Positivity of tan</text>
    </name>
    <questiontext format="html">
      <text><![CDATA[<p class="HELM_exercise">Exercise<br></p>
In which quadrants is \( \tan \theta \) positive?]]></text>
    </questiontext>
    <generalfeedback format="html">
      <text/>
    </generalfeedback>
    <defaultgrade>1</defaultgrade>
    <penalty>0.3333333</penalty>
    <hidden>0</hidden>
    <idnumber/>
    <single>false</single>
    <shuffleanswers>false</shuffleanswers>
    <answernumbering>none</answernumbering>
    <showstandardinstruction>1</showstandardinstruction>
    <correctfeedback format="html">
      <text>Your answer is correct.</text>
    </correctfeedback>
    <partiallycorrectfeedback format="html">
      <text>Your answer is partially correct.</text>
    </partiallycorrectfeedback>
    <incorrectfeedback format="html">
      <text>Your answer is incorrect.</text>
    </incorrectfeedback>
    <shownumcorrect/>
    <answer fraction="50" format="html">
      <text><![CDATA[Quadrant 1: \(0 \leq \theta &lt; \dfrac{\pi}{2} \)]]></text>
      <feedback format="html">
        <text>\( \quad\tan\theta=\dfrac{\sin\theta}{\cos\theta}=\dfrac{+\text{ve}}{+\text{ve}}
=+\text{ve} \)</text>
      </feedback>
    </answer>
    <answer fraction="-50" format="html">
      <text><![CDATA[Quadrant 2: \(\dfrac{\pi}{2} &lt; \theta \leq \pi \)]]></text>
      <feedback format="html">
        <text>\( \tan \theta=\dfrac{\sin\theta}{\cos\theta}=
\dfrac{+\text{ve}}{-\text{ve}}=-\text{ve} \)</text>
      </feedback>
    </answer>
    <answer fraction="50" format="html">
      <text><![CDATA[Quadrant 3: \( \pi \leq \theta &lt; \dfrac{3\pi}{2} \)]]></text>
      <feedback format="html">
        <text>\( \tan\theta=\dfrac{\sin\theta}{\cos\theta}=\dfrac{-\text{ve}}{-\text{ve}}
=+\text{ve}\)</text>
      </feedback>
    </answer>
    <answer fraction="-50" format="html">
      <text><![CDATA[Quadrant 4: \( \dfrac{3\pi}{2} &lt; \theta \leq 2\pi \)]]></text>
      <feedback format="html">
        <text>\(\tan\theta=\dfrac{\sin\theta}{\cos\theta}
=\dfrac{-\text{ve}}{+\text{ve}}=-\text{ve} \)</text>
      </feedback>
    </answer>
  </question>
</quiz>
