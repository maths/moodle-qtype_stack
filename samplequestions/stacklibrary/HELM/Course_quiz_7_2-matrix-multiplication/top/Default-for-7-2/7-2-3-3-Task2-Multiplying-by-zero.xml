      <text><![CDATA[matrixa: matrix([a,b],[c,d]);
matrixa: ev(matrixa,simp);
matrixb: matrix([0,0],[0,0]);
matrixb: ev(matrixb,simp);
correctanswer: ev(matrixb . matrixa,simp);

AA: matrixa;
BBT: transpose(matrixb);
CC: zeromatrix (first(matrix_size(AA)), first(matrix_size(BBT)));
SS: for a:1 thru first(matrix_size(AA)) do for b:1 thru first(matrix_size(BBT)) do CC[ev(a,simp),ev(b,simp)]:apply("+",zip_with("*",AA[ev(a,simp)],BBT[ev(b,simp)]));
DD: ev(CC,simp);

BB: matrixb;
AAT: transpose(matrixa);
EE: zeromatrix (first(matrix_size(BB)), first(matrix_size(AAT)));
for a:1 thru first(matrix_size(BB)) do for b:1 thru first(matrix_size(AAT)) do EE[ev(a,simp),ev(b,simp)]:apply("+",zip_with("*",BB[ev(a,simp)],AAT[ev(b,simp)]));
FF: ev(EE,simp);]]></text>
