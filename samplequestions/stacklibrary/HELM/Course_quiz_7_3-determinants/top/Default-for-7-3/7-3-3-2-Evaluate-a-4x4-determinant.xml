ta24: ev(matrix([AAT[2,1], AAT[2,3], AAT[2,4]], [AAT[3,1], AAT[3,3], AAT[3,4]], [AAT[4,1], AAT[4,3], AAT[4,4]]),simp)
ta3: ev(determinant(ta22),simp);
ta4: ev(determinant(ta24),simp);
ta5: ta;</text>
