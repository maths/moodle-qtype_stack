ab_mat:matrix([a_x_plus_b_x],[a_y_plus_b_y]);
ab_vec: texboldatoms(dotproduct(ijk_vec,ab_mat));
 r:[a_x_plus_b_x,a_y_plus_b_y];]]></text>
