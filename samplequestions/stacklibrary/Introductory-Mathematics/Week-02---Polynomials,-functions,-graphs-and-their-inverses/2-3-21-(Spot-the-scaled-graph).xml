    <questionvariables>
      <text><![CDATA[/* Make sure m<>1, or adjust the list of options. */
m:2;
/* Make sure a<>b. */
amag:2+rand(2);
pm1:rand([-1,1]);
pm2:rand([-1,1]);
bmag:1+rand(2);
a:pm1*amag;
b:pm2*bmag;
p:-(x+1)^2 +1;
q:-(a*x+1)^2+1;
flistpre:[-(x/a+1)^2 +1,-a*(x+1)^2 +1,-((x+1)^2)/a +1,-(x+1)^2 +a,-(x+1+a)^2 +1,-(x+1-a)^2 +1];
flist:rand_selection(flistpre,3);
flist:append([[q,true]],maplist(lambda([ex],[ex,false]),flist));
flist:random_permutation(flist);
/* Define axes */
YL:[y,-5,5]
XL:[x,-5,5]
/* Create a list of just the plots, to plot. */
plist:map(first,flist);
/* Identify both the correct answer, and the position of the correct answer. */
tac:first(mcq_correct(flist));
n:first(sublist_indices(flist, lambda([ex],second(ex))));
corletter:[A,B,C,D][n];
ta1:maplist(lambda([letter],[letter,is(letter=corletter),sconcat("Graph ",letter)]),[A,B,C,D]);]]></text>
