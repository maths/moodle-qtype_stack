c1:rand_range(1,3);
forms:[(x-r1)*(x-r2)*(x-r3), (x-r1)^2*(x-r3), (x-r2)^3, (x-r1)*(x^2+x+c1), -(x-r1)*(x-r2)*(x-r3), -(x-r1)^2*(x-r3), -(x-r2)^3, -(x-r1)*(x^2+x+c1)];
alphas:[r1,r1,r2,r1,r1,r1,r2,r1];
funcs:makelist(i,i,0,7); /* this is the list of IDs of the corresponding images */
