q:forms[qform];
/* permute the graphs but keep note of which ones are right! */
reordering:random_permutation([1,2,3,4,5,6,7,8]);
fntoletter:zip_with("[",reordering,[A,B,C,D,E,F,G,H]);
/* apply the reordering to produce the shuffled list of options */
funcstoplot: makelist(funcs[reordering[i]],i,1,8);
corr:maplist(lambda([ex],assoc(ex,fntoletter)), [1,2,3,4,5,6,7,8]);
ta1:maplist(lambda([ex],[ex, is(ex=assoc(qform,fntoletter))]), [A,B,C,D,E,F,G,H]);
corr1:corr[qform];
ta2:alphas[qform];
thumbnailplot:lambda([ex1,ex2],sconcat("<img src='https://www.maths.ed.ac.uk/gkinnear/fac/322fig",ex1,".svg' alt=' ",ex2," ' />"));
/* for the feedback: */
functionhas:["three real roots","two roots, with one of them repeated","one root which is a point of inflection","one real root which is not repeated"];
functionhas:append(functionhas,functionhas)[qform]; /* set of four is repeated, then select the correct one using qform */
candidatepairs:[qform,if (qform<5) then qform+4 else mod(qform+4,8)]; /*the two forms which differ only by sign */
maybegraph:map(lambda([ex],assoc(ex,fntoletter)),candidatepairs);
sign:if (qform<5) then "positive" else "negative";
keyterm:[(x-r1),(x-r1)^2,(x-r2)^3,(x-r),(x-r1),(x-r1)^2,(x-r2)^3,(x-r1)][qform];]]></text>
