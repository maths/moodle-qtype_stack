    <questionvariables>
      <text>sind(d):=sin(d*%pi/180);
asind(x):=asin(x)*180/%pi;

aa:1+rand(20);
ang:1+rand(5);
eqn: aa*(sin(x))^2 = ang;
sqrtang: sqrt(ang/aa);

soln1: round(asind(sqrtang));
soln2: round(180-asind(sqrtang));
soln3: round(180+asind(sqrtang));
soln4: round(360-asind(sqrtang));

ta1: 4;
ta2: soln1;</text>
