rsq: gg^2 + ff^2 -cc;
r: sqrt(rsq);

circ: x^2 + y^2 + 2*gg*x + 2*ff*y +cc;
circ2: (x+gg)^2 + (y+ff)^2 = rsq
circ3: (x+gg)^2 + (y+ff)^2 - rsq

px : -3;
py: 2

mrad: (py - -ff)/(px - -gg);
mtan: (-1)/mrad;

tang: px*x + py*y + gg*(x + px) + ff*(y + py) +cc;
ta1: (-1)*expand(tang);</text>
