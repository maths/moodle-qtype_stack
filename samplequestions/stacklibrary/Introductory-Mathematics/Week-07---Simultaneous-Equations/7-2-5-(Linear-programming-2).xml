    <questionvariables>
      <text><![CDATA[d1: 1+rand(5);
d2: 1+rand(5);

f1: 1+rand(5);
f2: 1+rand(5);
f3: 1+rand(5);

g1: 1+rand(5);
g2: 1+rand(5);
g3: 1+rand(5);

h1: 1+rand(5);
h2: 1+rand(5);
h3: 1+rand(5);

opt: d1*x +d2*y;

c1: f1*x+ f2*y <= 5+f3;
c2: g1*x-g2*y >= g3;
c3: h1*x - h2*y <= h3 ;

eqn1:  f1*x+ f2*y = 5+f3;
eqn2: g1*x-g2*y =g3;
eqn3: h1*x - h2*y = h3;

aa1:solve([eqn1,eqn2],[x,y])[1][1];
aa2:solve([eqn1,eqn2],[x,y])[1][2];

bb1:solve([eqn1,eqn3],[x,y])[1][1];
bb2:solve([eqn1,eqn3],[x,y])[1][2];

cc1:solve([eqn2,eqn3],[x,y])[1][1];
cc2:solve([eqn2,eqn3],[x,y])[1][2];

aa: ev(opt, aa1,aa2);
bb: ev(opt, bb1,bb2);
cc: ev(opt, cc1,cc2);

ll: [aa,bb,cc];
ss: sort (ll, 'orderlessp)

ta1: ss[3]
ta2:ss[1]]]></text>
