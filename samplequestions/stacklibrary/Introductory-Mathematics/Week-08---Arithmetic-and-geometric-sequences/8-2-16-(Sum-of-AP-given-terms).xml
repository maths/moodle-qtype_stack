      <text><![CDATA[a_magnitude:rand(8)+2;
a_sign:1;
aval: ev(a_magnitude*a_sign,simp);      /*first term of the sequence */
d_magnitude:rand(8)+1;
d_sign:2*rand(2)-1;
dval: ev(d_magnitude*d_sign, simp);      /* common difference */
nval:ev((rand(9)+19), simp)
nvalm1:ev((nval-1), simp);

an: aval+(n-1)*dval           /* arithmetic sequence formula*/
N:5
S1:ev(makelist(k,k,1, N),simp)
S2:maplist(lambda([ex],ev(an,n=ex)),S1)
S3:ev(S2,simp)
S4: apply("+",S3)

two_sumn: ev((nval*(2*aval+nvalm1*dval)),simp);
sum_n: ev(two_sumn/2,simp);


 sum_a_not_two_a: ev(nval*(aval+nvalm1*dval)/2,simp);
 sum_nd: ev(nval*(2*aval+nval*dval)/2,simp);
 factor2: ev( (2*a+(n-1)*d),simp);
 nfactora: ev( n*(a+(n-1)*d),simp);
 nfactord:n*(2*a+n*d);
 nfactor2:n*factor2;
 half_factor2:factor2/2;
 term_n: ev( (aval + (nval-1)*dval),simp);

last_term:ev(aval+(nval-1)*dval,simp);]]></text>
