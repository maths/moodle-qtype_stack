    <questionvariables>
      <text><![CDATA[/* based on CAP W8 Q24 Diagnostic_SEQ-SGM_1 */
aval:ev(1+rand(3),simp);
rval:rand([sqrt(2),sqrt(3),sqrt(5)]);
k:ev(rval^2,simp);

an: aval*rval^(n-1);
N:5;
S1:ev(makelist(k,k,1,N),simp);
S2:maplist(lambda([ex],ev(an,n=ex)),S1);
S3:ev(S2,simp);
S4:apply("+",S3);

n:ev((rand(4)*2+5), simp);
rp1:rval+1;
avalrval: aval * rval;
ar:a * r;
sumtoinfinity: ev(aval/(1-rval), simp);
sum1: ev(sumtoinfinity*(1-rval^n), simp);
ta1:sum1]]></text>
