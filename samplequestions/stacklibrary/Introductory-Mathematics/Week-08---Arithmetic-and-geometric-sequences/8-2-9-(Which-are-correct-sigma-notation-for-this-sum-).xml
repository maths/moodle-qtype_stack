expr:rand([rand([1,2,3,4])*n,n-1,n^2,(n-1)^2])
terms:makelist(ev(expr,n=n),n,lower,upper);
simp:false;
cor1:'sum(expr,n,lower,upper);
cor2:'sum(ev(expr,n=k-1,simp),k,ev(lower+1,simp),ev(upper+1,simp));
cor3:'sum(ev(expr,n=j+1,simp),j,ev(lower-1,simp),ev(upper-1,simp));
cor4:'sum(ev(expr,n=m,simp),m,ev(lower,simp),ev(upper,simp));
incor1:'sum(ev(expr,n=k-1,simp),k,ev(lower,simp),ev(upper,simp));
incor2:'sum(ev(expr,n=k-1,simp),k,ev(lower+1,simp),ev(upper,simp));
incor3:'sum(ev(expr,n=j+1,simp),j,ev(lower+1,simp),ev(upper+1,simp));
incor4:'sum(ev(expr,n=m+1,simp),m,ev(lower,simp),ev(upper,simp));
corbase:[cor1,cor2,cor3,cor4];
wrongbase:[incor1,incor2,incor3,incor4];
mcq:multiselqnalpha(corbase, 3, wrongbase, 3);
ta1:mcq[1];
version:mcq[2];
corr1:mcq_correct(ta1);
