    <questionvariables>
      <text><![CDATA[/* This template works for things of the form (ax^b+c/x^d)^n where n is odd. */
assume_pos:true
v:x
a:rand(3)+2
b:3;
t1:a*v^b
c:-(a-1);
d:1;
t2:c/v^d;
n:rand([5,7]);
k: rand([n+2,n-2]) ;  /* We pick out the "k"th term in the binomial expansion and ask for this.*/
j_val: -(k-3*n)/4;    /*k= 3n-2j*/
p: t1+t2;

term: binomial(n,j_val)*ev(t1^(n-j)*t2^j,j=j_val);
ta :coeff(expand(p^n),x,k);]]></text>
    </questionvariables>
