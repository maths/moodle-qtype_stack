    <questionvariables>
      <text><![CDATA[f(x):=x^2;
Rend:6;
n:rand([3,6]);
[ls,rs]:[[40,112],[55,91]][n/3];
ver:rand([1,2]);
LorR:["left","right"][ver];
imin:[0,1][ver];
imax:[n-1,n][ver];
missingterm:rand(makelist(i,i,imin+1,imax-1));
evalpointsL:makelist(i*Rend/n, i, imin, missingterm-1);
evalpointsR:makelist(i*Rend/n, i, missingterm+1,imax);
fvalsL:map(f,evalpointsL);
fvalsR:map(f,evalpointsR);
simp:false;
firstbit:apply("+",map(lambda([ex],ev(ex,simp)),fvalsL));
lastbit:apply("+",map(lambda([ex],ev(ex,simp)),fvalsR));
simp:true;
ta1:ev(f(i*Rend/n), i=missingterm);]]></text>
