ATNumSigFigs(SA,SBL) := block([Validity,RawMark,FeedBack,AnswerNote,ret,ol,nsf,asf,c0,c1,c2,SAA,SBB],
    Validity:true, RawMark:true, FeedBack:"", AnswerNote:"ATNumSigFigs",

    SAA:errcatch(ev(SA,simp,fullratsimp,nouns)),
    if (is(SAA=[STACKERROR]) or is(SAA=[])) then return([false,false,"ATNumSigFigs_STACKERROR_SAns",""]),
    SBB:errcatch(ev(SBL,simp,fullratsimp,nouns)),
    if (is(SBB=[STACKERROR]) or is(SBB=[])) then return([false,false,"ATNumSigFigs_STACKERROR_TAns",""]),

    /* SBL is a list: the teacher's answer, the variable, and whether formative feedback is to be provided. */
    /* Sort out options */
    if listp(SBL) then (SB:SBL[1], ol:SBL[2]) else 
        (print("TEST_FAILED"),return([false,false,"ATNumSigFigs_STACKERROR_no_option",StackAddFeedback("","TEST_FAILED")])),
    if listp(ol) then 
          if length(ol)#2 then 
             (print("TEST_FAILED"),return([false,false,"ATNumSigFigs_STACKERROR_list_wrong_length",StackAddFeedback("","TEST_FAILED")]))
          else 
             (nsf:ol[1],asf:ol[2]) 
       else (nsf:ol,asf:ol),
    if not(integerp(nsf) and integerp(asf)) then
             (print("TEST_FAILED"),return([false,false,"ATNumSigFigs_STACKERROR_not_integer",StackAddFeedback("","TEST_FAILED")])),
    /* SA should be only a number. */
    SA:errcatch(ev(SA,simp,nouns)),
    if is(SA=[STACKERROR]) then return([false,false,"ATNumSigFigs_Error simplifing SAns",""]),
    SA:SA[1],
    if (not(floatnump(SA)) and not(integerp(SA))) then
        return([false,false,"ATNumSigFigs_NotDecimal",StackAddFeedback("","ATNumSigFigs_NotDecimal")]),
    /* Puts Teacher's answer between 0 & 1 */
    c0:-floor(log(abs(float(SB)))/log(10)+1),
    c1:SA*10^(c0+floor(nsf)),
    if is(float(c1-floor(c1))=0.0)=false then (Validity:true,RawMark:false,FeedBack:StackAddFeedback(FeedBack,"ATNumSigFigs_WrongDigits"),AnswerNote:concat(AnswerNote,"_WrongDigits")), 
    c2:abs(abs(SA*10^(c0+floor(asf)))-abs(SB*10^(c0+floor(asf)))),
    if not(is(c2<0.5)) then (Validity:true,RawMark:false,FeedBack:StackAddFeedback(FeedBack,"ATNumSigFigs_Inaccurate"),AnswerNote:concat(AnswerNote,"_Inaccurate")), 
    if RawMark=true then AnswerNote:"",
    ret: [Validity,RawMark,AnswerNote,FeedBack],
    return(ret)
)$

