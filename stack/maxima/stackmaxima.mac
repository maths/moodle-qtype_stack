    if not(algebraic_equivalence(SA,SB)) then block(
            rawmk:false,
            fbn:"ATSingleFrac_ret_exp",
            fb: StackAddFeedback(fb,fbn),
            ansnote:concat(ansnote,fbn)
    ),
    return([Validity,rawmk,ansnote,fb])
)$


