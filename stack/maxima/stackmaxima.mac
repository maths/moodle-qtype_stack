ATSets(SA, SB) := block([RawMark, FeedBack, AnswerNote, SAsimp, SBsimp],
    RawMark:true, FeedBack:"", AnswerNote:"",
    /* Turn on simplification and error catch */
    if (is(_EC(errcatch(SAsimp:ev(SA, simp, nouns)), "") = false)) then
