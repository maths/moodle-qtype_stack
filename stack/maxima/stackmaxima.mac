divthru(q) :=
       if (not atom(q) and part(q,0)="/")
       then
         block([num,den,divt,quo,rem],
           num:part(q, 1),
           den:part(q, 2),
           divt:divide(num, den) ,
           quo:divt[1],
           rem:divt[2],
           quo+rem/den )
       else q;

