      FeedBack:StackAddFeedback(FeedBack, "ATSets_missingentries", stack_disp(setdifference(SBsimp, SAsimp), "d")),
      AnswerNote:StackAddNote(AnswerNote, "ATSets_missingentries")
    ),

    return([true, false, AnswerNote, FeedBack])
