<div class="scope">
    <div class="row" id="qtype-stack-metadata-scope-{{{firstProp}}}">
        <div class="col-lg-2"><h6>{{#str}} scope, qtype_stack {{/str}}</h6></div>
        <div class="col-2 inputcol">
            {{#input}}
                <label class="sr-only" for="{{element.id}}">
                    {{#str}} scope, qtype_stack {{/str}}
                </label>
                {{> core_form/element-text-inline }}
            {{/input}}
        </div>
        <div class="col-1">
            <button id="smd_scope_{{{firstProp}}}_delete" name="smd_delete" type="button" class="btn btn-danger">
